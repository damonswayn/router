{
  "name": "damonswayn/router",
  "description": "A simple K/V Router",
  "authors": [
    {
      "name": "Damon Swayn",
      "email": "me@shruubi.io"
    }
  ],
  "autoload": {
    "psr-4": {
      "Shruubi\\Router\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Shruubi\\Router\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.0",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "squizlabs/php_codesniffer": "^3.0",
    "phpstan/phpstan": "^1.11",
    "friendsofphp/php-cs-fixer": "^3.58"
  },
    "scripts": {
        "test": "phpunit --configuration tests/phpunit.xml --testsuite unit"
    }
}
